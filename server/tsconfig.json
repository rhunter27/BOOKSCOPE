{
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "types": ["node"],
      "sourceMap": true,
      "allowJs": true,
      "baseUrl": ".",
      "paths": {
        "@models/*": ["./server/models/*"],
        "@utils/*": ["./server/utils/*"],
        "@schemas/*": ["./server/schemas/*"]
      }
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", "client", "dist", "**/*.test.ts"]
  }